package org.sample.EntraSDET.browserfactory;

import org.openqa.selenium.PageLoadStrategy;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.chrome.ChromeOptions;

import io.github.bonigarcia.wdm.managers.ChromeDriverManager;
import io.github.bonigarcia.wdm.managers.EdgeDriverManager;
import io.github.bonigarcia.wdm.managers.FirefoxDriverManager;
import io.github.bonigarcia.wdm.managers.SafariDriverManager;
import utils.ConfigReader;

public class BrowserDriver {
	
	/*
	 * public BrowserDriver() { ChromeOptions chromeOptions = new ChromeOptions();
	 * chromeOptions.setPageLoadStrategy(PageLoadStrategy.NORMAL); WebDriver driver
	 * = new ChromeDriver(chromeOptions); try { // Navigate to Url
	 * driver.get("https://entrata.com/"); driver.manage().window().maximize(); }
	 * finally { driver.quit(); } }
	 */
	public WebDriver createInstance(String browser) {
        WebDriver driver = null;
        ConfigReader config = ConfigReader.getInstance();
        switch(config.getBrowser()) {
            case "chrome":
            	driver = new ChromeDriverManager().create();
            case "firefox":
            	driver = new FirefoxDriverManager().create();
            case "edge":
            	driver = new EdgeDriverManager().create();
            case "safari":
            	driver = new SafariDriverManager().create();
        }
		return driver;
    }

}
