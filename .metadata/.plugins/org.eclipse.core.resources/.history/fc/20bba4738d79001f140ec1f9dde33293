package org.sample.EntraSDET;

import org.openqa.selenium.WebDriver;
import org.sample.EntraSDET.browserfactory.BrowserDriver;
import org.testng.annotations.AfterMethod;
import org.testng.annotations.BeforeMethod;

import utils.ConfigReader;

public class BaseTest {
	
	protected WebDriver driver;
	ConfigReader config;

    @BeforeMethod
    public void preCondition() {
        //String browserToUse = configuration().browser();
        config = ConfigReader.getInstance(); 

        driver = new BrowserDriver().createInstance(config.getBaseUrl());

        driver.get(config.getBrowser());
        
        driver.manage().window().maximize();
    }

    @AfterMethod
    public void postCondition() {
        driver.quit();
    }

}
